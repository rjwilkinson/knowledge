// Tagbar

#tagbar-help{

background-color: rgb(245, 245, 245);
font-size: 14px;
line-height: 20px;
margin-bottom: 15px;
margin-top: 0px;
padding-bottom: 15px;
padding-top: 8px;
padding-left:10px;
border-style:dotted;
border-width:2px; 
border-color:#FAF1D2;
}

ul#tag-list {
padding-left:0;
padding-top:10px;

 li{
 list-style-type:none;
 display:inline;
 color:white;
 margin-left:0;
 border-style:solid;
 border-color:black;
 background-color:black;
 padding-top:5px;
 margin-top:3px;
 border-radius: 6px 6px 6px 6px;
 border-top-left-radius: 6px;
 border-top-right-radius: 6px;
 border-bottom-right-radius: 6px;
 border-bottom-left-radius: 6px;
 }
}




// Tag a links pseudos

ul#tag-list a:link{
text-decoration:none;

}

ul#tag-list a:visited{
color:lightpink;
text-decoration:line-through;
}

ul#tag-list a:hover{
text-decoration:none;
color:black;
}


// Tag li pseudo's

ul#tag-list li:link{
text-decoration:none;
color:black;
background-color:white;

}

ul#tag-list li:hover{
color:black;
text-decoration:none;
background-color:white;
border-color:white;
}


